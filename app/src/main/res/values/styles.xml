<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- translucent system bars -->
        <!--        <item name="android:windowTranslucentStatus">true</item>
                <item name="android:windowTranslucentNavigation">true</item>-->
        <!--选中状态icon的颜色和字体颜色-->
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <item name="colorAccent">@android:color/holo_green_light</item>
        <!--正常状态下字体颜色和icon颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>

    <style name="MyActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyOverflowButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@android:drawable/ic_menu_view</item>
    </style>

    <style name="MyToolbarTextStyle" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TransparentActivity" parent="AppTheme.Base">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style parent="Theme.AppCompat.NoActionBar" name="AppTheme.Dark">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/primary</item>
        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>
        <item name="colorButtonNormal">@color/primary_darker</item>
        <!--<item name="android:colorButtonNormal">@color/primary_darker</item>-->

    </style>


    <style parent="Theme.AppCompat.Dialog" name="AppTheme.Dark.Dialog">

        <item name="colorAccent">@color/white</item>

        <item name="android:textColorPrimary">@color/iron</item>

        <item name="android:background">@color/primary</item>

    </style>
</resources>
